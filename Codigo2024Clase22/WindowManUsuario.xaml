<Window x:Class="Codigo2024Clase22.WindowManUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codigo2024Clase22"
        mc:Ignorable="d"
        Title="WindowManUsuario" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0">
            <TextBlock Text="Nombre:" Margin="5" FontWeight="Bold"/>
            <TextBox x:Name="txtNombre" Margin="5" Height="30" />

            <TextBlock Text="Apellido:" Margin="5" FontWeight="Bold"/>
            <TextBox x:Name="txtApellido" Margin="5" Height="30"/>

            <TextBlock Text="Correo Electrónico:" Margin="5" FontWeight="Bold"/>
            <TextBox x:Name="txtCorreo" Margin="5" Height="30"/>

            <Button  x:Name="Registrar" Content="Registrar Usuario"  Height="30" 
                    Background="Beige"  Click="Registrar_Click"
                    Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="dgUsuarios" Grid.Row="1" Margin="5"/>


    </Grid>
</Window>
