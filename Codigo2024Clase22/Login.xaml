<Window x:Class="Codigo2024Clase22.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codigo2024Clase22"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <Label Content="Usuario" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtUsuario" Width="250" Height="30" Background="LightYellow" Margin="0,0,0,20"/>

            <Label Content="Contraseña" FontWeight="Bold" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Width="250" Height="30" Background="LightYellow" Margin="0,0,0,20"/>

            <Button Content="Iniciar Sesión" Width="150" Height="40" 
             HorizontalAlignment="Center"  />

            <Label x:Name="lblError" Content="" Foreground="Red" 
            HorizontalAlignment="Center" Margin="10,10,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
